<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gamecollector" version="0.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hadougame</name>
    <description>
        Organize sua coleção de jogos de Super Nintendo de maneira fácil e rápida.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Hadougame Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <platform name="android">
      <icon src="www/img/logo.png" density="ldpi" />
      <icon src="www/img/logo.png" density="mdpi" />
      <icon src="www/img/logo.png" density="hdpi" />
      <icon src="www/img/logo.png" density="xhdpi" />
    </platform>     
</widget>
